      function Calculadora() {
       var n1 = parseFloat(prompt("Digite um valor "));
       var n2 = parseFloat(prompt("Digite um valor "));

        var opcao = parseInt(prompt("Escolha uma das opções: 1-SOMA, 2-SUBTRAÇÃO, 3-MULTIPLICAÇÃO, 4-DIVISÃO "));

        if(opcao === 1){
          soma(n1,n2);
        }

        else if(opcao ===2){
          subtracao(n1,n2);
        }

        else if(opcao ===3){
          console.log(multiplicacao(n1,n2));
        }

        else if(opcao ===4){
          console.log(divisao(n1,n2));
        }

        else {
          console.log("opção inválida");
        } 
        
       
      }

      function soma(a,b) {
         var result = a + b;
         console.log("O resultado da soma é: ",result);    
      }

       let subtracao = function () {
        console.log (a-b);
      }

      var multiplicacao = (a,b) => {var result=a * b;
                 document.getElementById("res").innerHTML = "O resultado da multiplicação é: " + result;
      }

      var divisao = (a,b) => a / b;
    
