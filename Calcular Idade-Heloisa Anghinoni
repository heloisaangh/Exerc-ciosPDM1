    <script>

       function Calculadora() {
       var ano_atual = parseFloat(prompt("Digite o ano atual "));
       var ano_aniver = parseFloat(prompt("Digite o ano de seu nascimento"));
         if (ano_atual < ano_aniver){
        throw "Data Inválida";
      }
      else {
        console.log(aniversario(ano_atual,ano_aniver));
      } 
       }

      var aniversario = (a,b) => a-b;
      
    </script>
